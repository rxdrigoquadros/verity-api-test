{
  "name": "serverrest-api-tests",
  "version": "1.0.0",
  "description": "Automated API tests for ServeRest using Playwright",
  "main": "index.js",
  "scripts": {
    "test": "playwright test || true",
    "test:ci": "playwright test --reporter=list,html",
    "test:users": "playwright test tests/users/ || true",
    "test:auth": "playwright test tests/auth/ || true",
    "test:rate-limit": "playwright test tests/rate-limit/ || true",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:parallel": "playwright test --workers=4",
    "test:serial": "playwright test --workers=1",
    "test:report": "playwright show-report",
    "test:codegen": "playwright codegen"
  },
  "keywords": [
    "api",
    "testing",
    "playwright",
    "automation",
    "serverrest",
    "e2e"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}